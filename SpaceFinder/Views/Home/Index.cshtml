@*top company slider*@

<section class="post_slider_area">
    <div style="text-align:center;margin-bottom:75px">
        <h2>Our Top Firms</h2>
        <p>If you are looking at blank cassettes on the web, you may be very confused at the difference in price. You may see some for as low as $.17 each.</p>
    </div>
    <div class="owl-carousel">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div>
                    <img src="@Url.Content("~/Images/gf1.jpg")" class="imageDim" />
                    <div class="post_text textColorSlider">
                        <label hidden>@item.CompanyId</label>
                        <p>@item.CompanyName</p>
                        <div>
                            Email : @item.Email <br />
                            Contact : @item.ContactNo<br />
                            Address : @item.Address
                        </div>
                        <a class="btn buttonCust" href="@Url.Action("CompanyDetail","Home" , new {id = item.CompanyId})">Explore</a>
                    </div>
                </div>
            }
        }
    </div>
</section>



