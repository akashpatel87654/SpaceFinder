@model IEnumerable<SpaceFinder.Entity.DashboardViewModel>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Custom/icomoon.css" rel="stylesheet" />
<link href="~/Content/Custom/owl.carousel.min.css" rel="stylesheet" />
