@model IEnumerable<SpaceFinder.Entity.DashboardViewModel>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Custom/icomoon.css" rel="stylesheet" />
<script src="~/Scripts/Custom/jquery.min.js"></script>



<style>

    .section-header {
        margin-bottom: 60px;
        position: relative;
    }

        .section-header::before {
            content: '';
            position: absolute;
            display: block;
            width: 100%;
            height: 5px;
            background: #f82249;
            bottom: 0;
        }


    .roundBorder {
        border-radius: 5px 5px 5px 5px !important;
    }
</style>



<div class="hero-wrap js-fullheight" style="background-image: url('@Url.Content("~/images/cbg2.jpg")');height:20% !important" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-10 text-center ftco-animate">
                <h2 class="subheading" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">We are here to help!</h2>
                <h1 class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
                    <span>Experience</span> . <span>Innovation</span> . <span>Excellence</span>
                </h1>
                @*<p><a href="#" class="btn btn-primary py-3 px-4">Request a Free Consultation</a></p>*@
                <div class="row d-flex justify-content-center mt-4 mb-4">
                    <div class="col-md-8">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { id = "form1", @class = "subscribe-form" }))
                        {
                            <div class="form-group d-flex">
                                <input type="text" id="txtSearch" name="searchText" class="form-control roundBorder" placeholder="Enter Firm Name">
                                &nbsp;<input type="submit" value="Search" class="submit px-3 roundBorder">&nbsp;
                                <input type="submit" id="searchCancel" value="Reset" class="submit px-3 roundBorder">
                                <input type="hidden" id="Name" value="@ViewBag.Name" />
                            </div>
                        }
                    </div>

                </div>
            </div>

        </div>

    </div>

</div>
<br />


<section id="speakers" class="wow fadeInUp">
    <div class="row no-gutters slider-text align-items-center justify-content-center">
        <div class="section-header" style="margin-bottom:0px !important">
            <div class="row justify-content-center">
                <div class="heading-section ftco-animate">
                    <h2>Real Estate Firms</h2>
                    <p style="text-align:center">Here are some of our firms</p>@*<span><i class="icon-arrow-down15"></i></span>*@
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Partial("_CompaniesList", Model)

