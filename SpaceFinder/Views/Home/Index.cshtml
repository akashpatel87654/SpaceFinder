<script>
    $(document).ready(function () {
        $('#txtSearch').val($('#Name').val());
        $(".owl-carousel").owlCarousel({
            slideSpeed: 1000,
            nav: true,
            autoplay: true,
            dots: true,
            loop: true,
            responsiveRefreshRate: 100,
        });
    });

    $('#searchCancel').click(function () {
        $('#txtSearch').val('');
    });
</script>