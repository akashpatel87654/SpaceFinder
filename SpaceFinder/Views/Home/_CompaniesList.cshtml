<style>
    .ContactBack {
        bottom: 100px;
        left: 20px;
        right: 20px;
        display: flex;
        position: absolute;
        color: #000000;
        font-family: "Lora", serif;
    }

        .ContactBack .position {
            display: block;
            color: #ccc;
            font-size: 13px;
            font-family: "Poppins", Arial, sans-serif;
        }
</style>

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <section class="ftco-counter" id="section-counter">
            <div class="container-fluid">
                <div class="row d-flex">
                    <div class="col-md-6 d-flex">
                        <video loop autoplay muted class="img d-flex align-self-stretch align-items-center justify-content-center">
                            <source src="~/Videos/godrej.mp4" type="video/mp4" />
                        </video>
                    </div>
                    <div class="col-md-6 px-5">
                        <div class="row justify-content-start pt-3 pb-3">
                            <div class="col-md-12 heading-section ftco-animate">
                                <h2 class="mb-4">@item.CompanyName</h2>
                                <p>@item.Description</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 justify-content-center counter-wrap ftco-animate">
                                <div class="block-18 text-center py-4 bg-light mb-4">
                                    <div class="text">
                                        <div class="icon d-flex justify-content-center align-items-center">
                                            <span class="flaticon-house"></span>
                                        </div>
                                        <strong class="number" data-number="@item.OpenProjects">0</strong>
                                        <span>Open Project</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 justify-content-center counter-wrap ftco-animate">
                                <div class="block-18 text-center py-4 bg-light mb-4">
                                    <div class="text">
                                        <div class="icon d-flex justify-content-center align-items-center">
                                            <span class="flaticon-handshake"></span>
                                        </div>
                                        <strong class="number" data-number="@item.Customers">0</strong>
                                        <span>Satisfied Customers</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 justify-content-center counter-wrap ftco-animate">
                                <div class="block-18 text-center py-4 bg-light mb-4">
                                    <div class="text">
                                        <div class="icon d-flex justify-content-center align-items-center">
                                            <span class="ion-ios-checkbox-outline"></span>
                                        </div>
                                        <strong class="number" data-number="@item.TotalProjects">0</strong>
                                        <span>Successful Projects</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 justify-content-center counter-wrap ftco-animate">
                                <div class="block-18 text-center py-4 bg-light mb-4">
                                    <div class="text">
                                        <div class="icon d-flex justify-content-center align-items-center">
                                            <span class="flaticon-medal"></span>
                                        </div>
                                        <strong class="number" data-number="@item.Awards">0</strong>
                                        <span>Awards &amp; Recognitions</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="ftco-section bg-light">
            <div class="container-fluid">
                <div class="row justify-content-center pb-3">
                    <div class="col-md-7 text-center heading-section ftco-animate">
                        <span class="subheading">Open</span>
                        <h2 class="mb-4">Projects</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @if (item.Projects.Count > 0)
                {
                    foreach (var project in item.Projects)
                    {
                        <div class="col-lg-3 col-sm-6">
                            <div class="block-2 ftco-animate">
                                <div class="flipper">
                                    <div class="front" style="background-image: url(/Images/@project.Photos[0].PhotoName);">
                                        <div class="box">
                                            <h2>@project.Name</h2>
                                            <p>Ahmedabad</p>
                                        </div>
                                    </div>
                                    <div class="back">
                                        <!-- back content -->
                                        <blockquote>
                                            <p>&ldquo;Even the all-powerful Pointing has no control about the blind texts it is an almost unorthographic life One day however a small line of blind text by the name of Lorem Ipsum decided to leave for the far World of Grammar.&rdquo;</p>

                                        </blockquote>
                                        <div class="ContactBack d-flex">
                                            <div class="name align-self-center">Call Us : <span class="position">@project.ContactNo</span></div>
                                        </div>
                                        <div class="author d-flex">
                                            <div class="name align-self-center">Address :<span class="position">@project.Address</span></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </section>
    }
}
else
{
    <div class="col-md-12 pb-4 pt-4" style="text-align:center">
        No data available.Please try with different keyword.
    </div>
}